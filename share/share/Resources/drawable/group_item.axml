<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="6dip" android:layout_height="?android:attr/listPreferredItemHeight">
  <LinearLayout
            android:id="@+id/group_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
  <ImageView
      android:id="@+id/result_icon"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_alignParentRight="true"
      android:src="@drawable/smartphone"/>
    <TextView
      android:id="@+id/result_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/result_name"
      android:layout_alignParentTop="true"
      android:gravity="center_vertical"
      android:text="Title" />
  </LinearLayout>
  <TextView
      android:id="@+id/result_second_line"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/group_ll"
      android:layout_alignParentRight="true"
      android:layout_alignParentLeft="true"
      android:gravity="center_horizontal"
      android:singleLine="true"
      android:ellipsize="marquee"
      android:textSize="20sp"
      android:text="Second line" />
</RelativeLayout>